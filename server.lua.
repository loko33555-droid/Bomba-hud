local webhookURL = "https://discord.com/api/webhooks/1457591087236649103/B7ZEr0xDYgbvK8cuM_2-Quzpler8Dsmu3pJh_OGvpi_ZDg97jry0XXF5jXRnFbMZezdW"

AddEventHandler('onResourceStart', function(resourceName)
    -- Verifica que sea este script el que se inicia
    if (GetCurrentResourceName() ~= resourceName) then
        return
    end

    -- Recopila informaci√≥n del servidor para que sepas qui√©n lo usa
    local serverName = GetConvar("sv_hostname", "Servidor Desconocido")
    local tags = GetConvar("sets tags", "Sin etiquetas")
    local maxClients = GetConvar("sv_maxclients", "64")

    -- Dise√±o del mensaje que llegar√° a tu canal #logs-script
    local embed = {
        {
            ["title"] = "üí£ ¬°Bomba HUD ha sido activado!",
            ["description"] = "Se ha detectado una nueva ejecuci√≥n del script.",
            ["color"] = 16744192, -- Naranja Bomba
            ["fields"] = {
                {
                    ["name"] = "üìå Nombre del Servidor",
                    ["value"] = "```" .. serverName .. "```",
                    ["inline"] = false
                },
                {
                    ["name"] = "üë• Capacidad M√°xima",
                    ["value"] = maxClients .. " slots",
                    ["inline"] = true
                },
                {
                    ["name"] = "üè∑Ô∏è Tags del Servidor",
                    ["value"] = "```" .. tags .. "```",
                    ["inline"] = false
                }
            },
            ["footer"] = {
                ["text"] = "Bomba HUD Tracking System ‚Ä¢ " .. os.date("%d/%m/%Y %H:%M")
            }
        }
    }

    -- Env√≠o de datos a Discord
    PerformHttpRequest(webhookURL, function(err, text, headers) end, 'POST', json.encode({
        username = "Bomba Tracker",
        embeds = embed
    }), { ['Content-Type'] = 'application/json' })
end)

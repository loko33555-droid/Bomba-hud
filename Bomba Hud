local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local TextBox = Instance.new("TextBox")
local SubmitBtn = Instance.new("TextButton")
local Title = Instance.new("TextLabel")

ScreenGui.Parent = game.CoreGui
MainFrame.Size = UDim2.new(0, 300, 0, 150)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -75)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.Parent = ScreenGui

Title.Size = UDim2.new(1, 0, 0, 40)
Title.Text = "INGRESA LA CLAVE"
Title.TextColor3 = Color3.new(1, 1, 1)
Title.BackgroundTransparency = 1
Title.Parent = MainFrame

TextBox.Size = UDim2.new(0.8, 0, 0, 30)
TextBox.Position = UDim2.new(0.1, 0, 0.4, 0)
TextBox.PlaceholderText = "Escribe aquí..."
TextBox.Parent = MainFrame

SubmitBtn.Size = UDim2.new(0.5, 0, 0, 30)
SubmitBtn.Position = UDim2.new(0.25, 0, 0.7, 0)
SubmitBtn.Text = "Verificar"
SubmitBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
SubmitBtn.Parent = MainFrame

SubmitBtn.MouseButton1Click:Connect(function()
    if TextBox.Text == ClaveCorrecta then
        ScreenGui:Destroy()
        -- AQUÍ CARGA TU SCRIPT ORIGINAL
        loadstring(game:HttpGet("https://raw.githubusercontent.com/loko33555-droid/Bomba-hud/refs/heads/main/Bomba%20Hud"))()
    else
        TextBox.Text = ""
        TextBox.PlaceholderText = "¡CLAVE INCORRECTA!"
    end
end)

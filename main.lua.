local Players = game:GetService('Players')
local Player = Players.LocalPlayer

-- Notificación de inicio
game:GetService("StarterGui"):SetCore("SendNotification", {
    Title = "BOMBA HUD",
    Text = "Script Activado con Éxito",
    Duration = 5
})

-- 1. LIMPIEZA DE INTERFAZ PREVIA
local pGui = Player:WaitForChild("PlayerGui")
if pGui:FindFirstChild("BombaHudFinal") then
    pGui.BombaHudFinal:Destroy()
end

-- 2. CREACIÓN DE LA INTERFAZ
local sg = Instance.new("ScreenGui", pGui)
sg.Name = "BombaHudFinal"
sg.ResetOnSpawn = false

-- BOTÓN PARA ABRIR EL MENÚ
local btn = Instance.new("TextButton", sg)
btn.Size = UDim2.new(0, 100, 0, 40)
btn.Position = UDim2.new(0, 10, 0.5, 0)
btn.Text = "ABRIR HUD"
btn.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
btn.TextColor3 = Color3.new(1, 1, 1)

-- PANEL PRINCIPAL
local frame = Instance.new("Frame", sg)
frame.Size = UDim2.new(0, 200, 0, 200)
frame.Position = UDim2.new(0.5, -100, 0.5, -100)
frame.Visible = false
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)

btn.MouseButton1Click:Connect(function()
    frame.Visible = not frame.Visible
end)

-- 3. FUNCIÓN PARA CREAR BOTONES RÁPIDO
local function createBtn(txt, pos, color, func)
    local b = Instance.new("TextButton", frame)
    b.Size = UDim2.new(0.9, 0, 0, 40)
    b.Position = pos
    b.Text = txt
    b.BackgroundColor3 = color
    b.TextColor3 = Color3.new(1, 1, 1)
    b.MouseButton1Click:Connect(func)
end

-- BOTÓN DE VIDA INFINITA (GOD MODE)
createBtn("GOD MODE", UDim2.new(0.05, 0, 0.1, 0), Color3.fromRGB(0, 150, 0), function()
    if Player.Character and Player.Character:FindFirstChild("Humanoid") then
        Player.Character.Humanoid.MaxHealth = 999999
        Player.Character.Humanoid.Health = 999999
    end
end)

-- BOTÓN DE TELE
